<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.seniorproject.smartshopping">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="SmartShopping"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controller.activity.LoginActivity"
            android:label="Smart Shopping"
            android:theme="@style/AppThemeWithNoActionBar"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.activity.MainActivity"
            android:windowSoftInputMode="adjustResize|stateHidden"/>
        <activity
            android:name=".controller.activity.MoreItemInventoryActivity"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity android:name=".controller.activity.MoreShoppingListItemActivity" />
        <activity android:name=".superuser.SuperUserItemActivity" />
        <activity
            android:name=".controller.activity.OCRActivity"
            android:theme="@style/AppThemeWithNoActionBar" />
        <activity
            android:name=".controller.activity.MoreGroupSettingActivity"
            android:windowSoftInputMode="adjustResize|stateHidden"
            />
    </application>

</manifest>